                <div class="checkbox">
                    <label>
                        <input asp-for="Trade" /> @Html.DisplayNameFor(model => model.Trade)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

