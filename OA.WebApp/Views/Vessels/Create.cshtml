@model OA.WebApp.Models.Vessel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>Vessel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
